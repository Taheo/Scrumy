@model Scrumy.Models.SlidesViewModel.EditSlideVM

<div class="modal fade" id="editSlideModal" role="dialog">
    <div class="modal-dialog">
        @using (@Html.BeginForm("EditSlide", "Slide", null, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit Slide</h4>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Number" class="control-label"></label>
                        <input asp-for="Number" class="form-control" required value="" />
                        <span asp-validation-for="Number" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Content" class="control-label"></label>
                        <input asp-for="Content" class="form-control" required value="" />
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SlideId" class="control-label"></label>
                        <select asp-for="SlideId" asp-items="Model.SlidesToSelect" class="form-control"></select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn-modal-submit" type="submit" name="button">Update</button>
                </div>
            </div>
        }
    </div>
</div>