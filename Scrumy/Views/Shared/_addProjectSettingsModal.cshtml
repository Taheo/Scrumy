@model Scrumy.Models.ProjectSettingsVM.ProjectSettingsAddVM

<div class="modal fade" id="addProjectSettingsModal" role="dialog">
    <div class="modal-dialog">
        @using (@Html.BeginForm("Create", "ProjectSettings", null, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Add Story Points Value</h4>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="EstimatedSPsum" class="control-label"></label>
                        <input asp-for="EstimatedSPsum" class="form-control" required value=""/>
                        <span asp-validation-for="EstimatedSPsum" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EstimatedTeamSpeed" class="control-label"></label>
                        <input asp-for="EstimatedTeamSpeed" class="form-control" required value=""/>
                        <span asp-validation-for="EstimatedTeamSpeed" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SprintAmount" class="control-label"></label>
                        <input asp-for="SprintAmount" class="form-control" required value=""/>
                        <span asp-validation-for="SprintAmount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SprintLength" class="control-label"></label>
                        <input asp-for="SprintLength" class="form-control" required value=""/>
                        <span asp-validation-for="SprintLength" class="text-danger"></span>
                    </div>

                </div>
                <div class="modal-footer">
                    <button class="btn-modal-submit" type="submit" name="button">Submit Settings</button>
                </div>
            </div>
        }
    </div>

</div>