@model Scrumy.Models.SprintTaskViewModel.SprintTaskAddStoryPointsVM

<div class="modal fade" id="addStoryPointsValueModal" role="dialog">
    <div class="modal-dialog">
        @using (@Html.BeginForm("AddStoryPointValue", "SprintTask", null, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Add Story Points Value</h4>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="StoryPointsValue" class="control-label"></label>
                        <input asp-for="StoryPointsValue" class="form-control" required value="" />
                        <span asp-validation-for="StoryPointsValue" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SprintTaskId" class="control-label"></label>
                        <select asp-for="SprintTaskId" asp-items="Model.TasksToSelect" class="form-control"></select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn-modal-submit" type="submit" name="button">Submit Value</button>
                </div>
            </div>
        }
    </div>

</div>