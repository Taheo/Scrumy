@inject SignInManager<ApplicationUser> SignInManager

<div class="action-container">
    <ul class="action-panel">
        <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="Contact">Privacy Policy</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="Contact">Terms of Use</a></li>
        @if (SignInManager.IsSignedIn(User))
        {
            <li><a asp-area="" asp-controller="Account" asp-action="Dashboard">Dashboard</a></li>
            <li><a asp-area="" asp-controller="SprintTask" asp-action="AgileWall">Agile Wall</a></li>
        }

    </ul>
</div>
