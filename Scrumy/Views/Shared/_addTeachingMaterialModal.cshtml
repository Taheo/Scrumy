@model Scrumy.Models.TeachingMaterialsVM.TeachingMaterialVM
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@


<div class="modal fade" id="addTeachingMaterialModal" role="dialog">
    <div class="modal-dialog">
        @using (@Html.BeginForm("Create", "TeachingMaterial", null, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Teaching Material Creator</h4>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Link" class="control-label"></label>
                        <input asp-for="Link" class="form-control" required />
                        <span asp-validation-for="Link" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Note" class="control-label"></label>
                        <input asp-for="Note" class="form-control" />
                        <span asp-validation-for="Note" class="text-danger"></span>
                    </div>

                </div>
                <div class="modal-footer">

                    <button class="btn-action btn-modal" type="submit" name="button">Add</button>
                </div>
            </div>
        }
    </div>

</div>