@{
    ViewData["Title"] = "Home Page";
}

<section class="slider">
    <div class="container-full">
        <h1>
            Scrumy <br />
            Meet best scrum app
        </h1>
        
        <a asp-area="" asp-controller="Account" asp-action="Register" class="btn-view">Register</a>
    </div>
</section>

<section class="container-full attributes blue-backg">
    <div class="container">
        <h2>Features</h2>
        <div class="row">
            <div class="col-md-4 attribute">
                <h3>Scalable</h3>
                <p>Suitable for large comapnies and for startups</p>
                <i class="fas fa-chart-line"></i>
            </div>
            <div class="col-md-4 attribute">
                <h3>Full of Tool</h3>
                <p>Provide many features for team management</p>
                <i class="fas fa-wrench"></i>
            </div>
            <div class="col-md-4 attribute">
                <h3>Modern</h3>
                <p>Written in modern technologies</p>
                <i class="fas fa-cogs"></i>
            </div>
        </div>
    </div>
</section>
<section class="container-full story-container">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Make long story short</h2>
                <div class="story">
                    <i class="far fa-sad-tear"></i>
                    <i class="fas fa-plus"></i>
                    <span>Scrumy</span>
                    <i class="fas fa-equals"></i>
                    <i class="far fa-smile"></i>
                </div>
                <a asp-area="" asp-controller="Account" asp-action="Register" class="btn-view">Try it</a>
            </div>
        </div>
    </div>
</section>
<section class="container-full blue-backg">
    <div class="timeline-container container">
        <div class="timeline-element">
            <h4>
                Plan
            </h4>
        </div>
        <div class="timeline-element">
            <h4>
                Execute
            </h4>
        </div>
        <div class="timeline-element">
            <h4>
                Done
            </h4>
        </div>
    </div>
</section>