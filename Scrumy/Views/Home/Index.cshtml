@{
    ViewData["Title"] = "Home Page";
}

<section class="slider">
    <div class="container-full">
        <div class="slider-content">
            <h1>
                Scrumy <br />
                Meet best scrum app
            </h1>
            <a asp-area="" asp-controller="Account" asp-action="Register" class="btn-view">Register</a>
        </div>
    </div>
</section>

<section class="container-full attributes">
    <div class="container">
        <h2>Features</h2>
        <div class="row">
            <div class="col-md-4 attribute">
                <h3>Scalable</h3>
                <p>Suitable for large comapnies and for startups</p>
                <i class="fas fa-chart-line"></i>
            </div>
            <div class="col-md-4 attribute">
                <h3>Full of Tool</h3>
                <p>Provide many features for team management</p>
                <i class="fas fa-wrench"></i>
            </div>
            <div class="col-md-4 attribute">
                <h3>Modern</h3>
                <p>Written in modern technologies</p>
                <i class="fas fa-cogs"></i>
            </div>
        </div>
    </div>
</section>
<section class="container-full app-desc">
